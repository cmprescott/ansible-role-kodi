<sources>
    <files>
        <default pathversion="1"></default>
{% for source in kodi_source_files %}
        <source>
            <name>{{ source | basename  }}</name>
            <path pathversion="1">{{ source }}</path>
            <allowsharing>true</allowsharing>
        </source>
{% endfor %}
